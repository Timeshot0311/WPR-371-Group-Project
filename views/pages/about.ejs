<%- include('../partials/header', { title: 'About Us' }) %>

<main class="about-page">
    <h1>About Our Team</h1>
    <p class="team-description">We're the development team behind this Community Portal project for our WPR course.</p>

    <div class="team-grid">
        <% team.forEach(member => { %>
            <div class="team-card">
                <div class="card-image">
                    <img src="/images/<%= member.image %>" alt="Photo of <%= member.name %>">
                </div>
                <div class="card-content">
                    <h2><%= member.name %></h2>
                    <p class="role"><%= member.role %></p>
                    <p class="bio"><%= member.bio %></p>
                </div>
            </div>
        <% }); %>
    </div>
</main>

<%- include('../partials/footer') %>